    /* Basic resets */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Arial', sans-serif;
      background-color: #fdf5e6;
      color: #333;
    }

    .product-page {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    /* Container for image and product details */
    .product-container {
      display: flex;
      gap: 30px;
      margin-bottom: 40px;
      justify-content: space-between;
      align-items: center;
    }

    /* Image section */
    .product-image {
      flex: 1;
      max-width: 600px;
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .product-image img {
      height: 400px;
      border-radius: 8px;
    }

    /* Product Details Section */
    .product-details {
      flex: 1.5;
      padding: 20px;
    }

    .product-title {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 15px;
      color: #333;
      font-family: 'Times New Roman', Times, serif;
    }

    .product-description {
      font-size: 16px;
      line-height: 1.8;
      color: #666;
      margin-bottom: 25px;
      font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    /* Action buttons */
    .product-actions {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }

    .btn {
      padding: 14px 25px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .btn.add-to-bag {
      background-color: #0d1f32;
      color: white;
    }

    .btn.save {
      background-color: #F3E9D5;
      color: black;
      border: 2px solid black;
    }

    .btn.view-in-ar {
      background-color: #659aef;
      color: white;
    }

    /* Additional Info Section */
    .product-info {
      font-size: 14px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-weight: 700;
      color: #555;
      margin-bottom: 20px;
      background-color: white;
      padding: 20px;
      border: 2px solid black;
    }

    .product-info p {
      margin: 8px 0;
    }

    /* Tabs for Description, Reviews, Other Information */
    .product-tabs {
      margin-top: 30px;
      /* border-top: 1px solid #ddd; */
      padding-top: 20px;
    }

    .tab {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 18px;
      font-weight: bold;
      color: #333;
    }

    .tab p {
      font-size: 14px;
      color: #555;
      
    }

    .tab .toggle {
      cursor: pointer;
      font-size: 20px;
      color: #0d1f32;
      transition: transform 0.3s;
    }

    .tab .toggle.open {
      transform: rotate(45deg); /* Plus to cross symbol */
    }

    .tab-content {
      display: none;
      margin-top: 15px;
      font-size: 14px;
      color: #555;
      padding-left: 20px;
    }

