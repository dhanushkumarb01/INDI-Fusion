  <script>
    // JavaScript to handle the toggling of tab content and plus sign transformation
    const tabs = document.querySelectorAll('.tab');

    tabs.forEach(tab => {
      const toggle = tab.querySelector('.toggle');
      const content = tab.nextElementSibling; // The content div is immediately after the tab
      toggle.addEventListener('click', () => {
        // Toggle the open class on the plus sign
        toggle.classList.toggle('open');
        // Toggle the display of the tab content
        if (content.style.display === 'none' || content.style.display === '') {
          content.style.display = 'block';
        } else {
          content.style.display = 'none';
        }
      });
    });
