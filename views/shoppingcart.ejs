.container{
    height:748px;
    width:748px;
    background-color: black;
    display:grid;
    gap:0.3rem;
    grid-template-columns: 320px 198px 153px 50px;
    grid-template-rows: 414px 130px 155px 22px;
    
    
    
}
.label{
    font-size: 3.5em;
}

.flexing{
    display:grid;
    height:80px;
    grid-template-columns: 20px 200px 1130px 90px 30px 30px 30px;
    margin: 0;
    padding: 0;
    text-align: center;
}


.bar{
    display:flex;
    flex-direction: row;
    justify-content:center;
    gap:70px;
    color:white;
    text-decoration: none;
    
}
.fashion , .homedecor , .bestsell , .about{
    color:white;
    text-decoration: none;
}
.artgallery{
    color:white;
    text-decoration: none;
}
hr{
    color:white;
}
        
