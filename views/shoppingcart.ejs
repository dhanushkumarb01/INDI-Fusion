    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            font-family: 'Arial', sans-serif;
            background: #F5F5F5;
            color: #333;
        }

        .logo {
            font-family: 'Amita', cursive;
            font-size: 48px;
            margin: 20px 0;
            color: #A24705;
        }

        .container1 {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background-color: #A24705;
            color: white;
            padding: 20px;
            text-align: center;
        }

        h2 {
            margin-top: 20px;
            color: #333;
        }

        /* Sidebar Section */
        .sidebar {
            width: 250px;
            height:220px;
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .sidebar ul {
            list-style: none;
            padding-left: 0;
        }

        .sidebar ul li {
            padding: 12px;
            cursor: pointer;
            color: #333;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar ul li.active, .sidebar ul li:hover {
            background-color: #A24705;
            color: white;
            padding-left: 15px;
        }

        /* Shopping Cart Section */
        .shopping-cart {
            flex: 2;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-right: 300px;
        }

        .cart-item {
            margin: 20px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .cart-item:hover {
            transform: scale(1.02);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.2);
        }

        .cart-item img {
            width: 120px;
            height: 120px;
            border-radius: 10px;
            object-fit: cover;
        }

        .item-details {
            flex: 1;
            margin-left: 20px;
        }

        .item-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .item-price {
            font-size: 18px;
            font-weight: bold;
            color: #A24705;
        }

        /* Order Summary Section */
        .order-summary {
            width: 300px;
            background-color: #F9F9F9;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 60px;
            height: fit-content;
        }

        .free-delivery {
            color: #3C5A3D;
            margin-bottom: 15px;
        }

        .subtotal {
            font-weight: bold;
            margin: 15px 0;
        }

        .gift {
            margin-top: 10px;
        }

        .buy-button {
            background-color: #ad5f17;
            color: white;
            padding: 15px;
            width: 100%;
            border: none;
            cursor: pointer;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .buy-button:hover {
            background-color: #A24705;
        }

        input[type="checkbox"] {
            margin-right: 10px;
        }

        .footflex{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: 200px;
    line-height: 40px;

}
footer{
    background-color: #6E7F77;
