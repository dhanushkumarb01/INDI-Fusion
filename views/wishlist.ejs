/* --------------------------------------------------------------- */

/* Styling for the wishlist container */
.products {
    display: flex;
    flex-wrap: wrap; /* Allow items to wrap to the next row */
    justify-content: space-evenly; /* Space items evenly with equal gaps */
    gap: 20px; /* Adds space between items */
    padding: 20px; /* Adds padding around the container */
    background-color: #fff; /* Optional: background for the products section */
    border-radius: 10px; /* Optional: rounded corners */
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Optional: subtle shadow effect */
    margin-left: 20px;
    margin-right: 20px;
}

/* Styling for each item */
.item {
    display: flex;
    flex-direction: column; /* Stack the child elements vertically */
    align-items: center; /* Center-align content */
    justify-content: space-between; /* Space elements within the item */
    width: 250px; /* Fixed width for consistency */
    background-color: #f9f9f9; /* Light background for items */
    padding: 10px; /* Padding around item content */
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    text-align: center; /* Center text alignment */
}

/* Styling for the images */
.item img {
    width: 100%; /* Make the image take full width of the item */
    height: 200px; /* Fixed height for consistency */
    object-fit: cover; /* Ensure the image fits well without distortion */
    border-radius: 8px; /* Rounded corners for images */
    margin-bottom: 10px; /* Space below the image */
}

/* Styling for the title and description */
.item h3 {
    font-size: 18px; /* Slightly larger font for titles */
    color: #333; /* Darker text color */
    margin-bottom: 5px; /* Space below the title */
}

.item p {
    font-size: 14px; /* Smaller text for descriptions */
    color: #666; /* Gray text for description */
    margin-bottom: 10px; /* Space below the description */
}

/* Styling for the button */
.item .but {
    padding: 8px 16px; /* Button padding */
    background-color: #a24705; /* Button background color */
    color: white; /* Button text color */
    border: none; /* Remove border */
    border-radius: 5px; /* Rounded corners */
    cursor: pointer; /* Pointer cursor on hover */
    transition: background-color 0.3s ease; /* Smooth color transition */
}

.item .but:hover {
    background-color: #8e3e04; /* Darker background on hover */
}

/* ------------------------------------------------------------------------------------ */
/* Wishlist panel styles */
#wishlistPanel {
    margin-top: 20px;
}

