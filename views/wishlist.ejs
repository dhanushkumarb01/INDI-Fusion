    text-decoration: none;
}
.artgallery{
    color:white;
    text-decoration: none;
}
hr{
    color:white;
}

/* Sidebar Styles */
.sidebar {
    width: 400px;
    background-color: white;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    margin-left: 20px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar li {
    padding: 12px;
    font-size: 16px;
    color: #333;
}

.sidebar li a {
    text-decoration: none;
    color: #333;
    display: block;
    padding: 8px;
    border-radius: 4px;
}

.sidebar li a:hover {
    background-color: #ddd;
}

.sidebar li.active {
    background-color: black;
    color: white;
    border-radius: 5px;
}

/* Main Content Styles */
.wishlist-content {
    flex-grow: 1;
    background: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.wishlist-content h2 {
    font-family: 'Amita', cursive;
    font-size: 28px;
    margin-bottom: 20px;
    text-align: center;
}

.wishlist-row {
    display: flex;
    flex-wrap: wrap; /* Allow wrapping for better responsiveness */
    gap: 20px; /* Spacing between items */
    justify-content: center; /* Center-align the items */
}

.item {
    text-align: center;
    width: 200px; /* Fixed width for items */
}

.item img {
    width: 100%;
    height: 200px;
    border-radius: 10px;
    margin-bottom: 10px;
    object-fit: cover;
}

.cart-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
}

.small-text {
    font-size: 14px;
    color: #555;
}

/* Wishlist Panel Styles */
#wishlist-panel {
    margin-top: 30px;
}

.wishlist-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.wishlist-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    margin-right: 20px;
}

.wishlist-item-name {
    flex-grow: 1;
    font-size: 18px;
}

.remove-btn {
    background-color: #d9534f;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 5px;
}

.remove-btn:hover {
    background-color: #c9302c;
}

/* Footer Styles */
.footflex {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: 200px;
    line-height: 40px;
}

footer {
    background-color: #6E7F77;
    height: 400px;
}

